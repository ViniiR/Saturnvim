local v_one_dark = require("lualine.themes.onedark")
v_one_dark.normal = {
    a = {
        fg = "#5696cc",
        bg = "#353f4b",
    },
    b = {
        fg = "#8f8d8d",
        bg = "none",
    },
    c = {
        fg = "#8f8d8d",
        bg = "none",
    },
    x = {
        fg = "#8f8d8d",
        bg = "none",
    },
    y = {
        fg = "#8f8d8d",
        bg = "none",
    },
    z = {
        fg = "#8f8d8d",
        bg = "#353f4b",
    },
}
