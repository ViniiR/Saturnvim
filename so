    ["nov"] = " O-PENDING",
    ["noV"] = " O-PENDING",
    ["no�"] = " O-PENDING",
    ["niI"] = " NORMAL",
    ["niR"] = " NORMAL",
    ["niV"] = " NORMAL",
    ["nt"] = " NORMAL",
    ["v"] = " VISUAL",
    ["vs"] = " VISUAL",
    ["V"] = " V-LINE",
    ["Vs"] = " V-LINE",
    ["�s"] = " V-BLOCK",
    ["s"] = " SELECT",
    ["S"] = " S-LINE",
    ["�"] = " S-BLOCK",
